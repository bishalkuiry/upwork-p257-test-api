generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  username        String   @unique
  name            String
  profilePicture  String
  points          Leaderboard[]
}

model Leaderboard {
  id        Int     @id @default(autoincrement())
  user      User?   @relation(fields: [userId], references: [id])
  userId    Int     
  point     Int

  @@index([userId], type: Hash)
}
